{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "login_with_email_response",
  "oneOf": [
    {
      "type": "object",
      "required": ["access_token"],
      "properties": {
        "access_token": { "type": "string" },
        "refresh_token": { "type": ["string", "null"] },
        "expires_in": { "type": ["integer", "boolean", "null"] },
        "token_type": { "type": ["string", "null"] },
        "user": {
          "type": ["object", "null"],
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    {
      "type": "object",
      "required": ["success", "is_email_verified"],
      "properties": {
        "success": { "type": "string" },
        "is_email_verified": { "type": "boolean" },
        "error": { "type": "string" }
      },
      "additionalProperties": true
    }
  ]
}
