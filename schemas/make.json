{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "required": ["manufacturer_title", "heading", "active_models"],
  "properties": {

    "reviews": {
      "oneOf": [
        { "$ref": "#/definitions/ReviewsObject" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/ReviewItem" }
        }
      ]
    }

  },

  "definitions": {
    "ReviewItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": ["integer", "number"] },
        "title": { "type": "string" },
        "sub_title": { "type": ["string", "null"] },
        "url": { "type": ["string", "boolean", "null"] },
        "detail_url": { "type": ["string", "null"] },
        "pictures": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "medium": { "type": ["string", "null"] },
            "original": { "type": ["string", "null"] },
            "thumbnail": { "type": ["string", "null"] }
          }
        },
        "overall_rating": { "type": ["integer", "number", "null"] },
        "owner": { "type": ["string", "null"] },
        "created_at": { "type": ["string", "null"] },
        "description": { "type": ["string", "null"] },
        "style": { "type": ["integer", "number", "null"] },
        "comfort": { "type": ["integer", "number", "null"] },
        "fuel_economy": { "type": ["integer", "number", "null"] },
        "performance": { "type": ["integer", "number", "null"] },
        "value_for_money": { "type": ["integer", "number", "null"] }
      },
      "required": ["id", "title"]
    },

    "ReviewsObject": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "heading": { "type": ["string", "null"] },
        "reviews": {
          "type": "array",
          "items": { "$ref": "#/definitions/ReviewItem" }
        }
      },
      "required": ["reviews"]
    }
  }
}
